<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
            <h3>Hola, te damos la bienvenida a nuestras Novedades!</h3>
            <span>Hola de nuevo, {{persona}}!</span>
            <a href="/admin/login/logout" class="btn btn-danger", class="col-1">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>

    {{!-- Fila 2 --}}
    <div class="row">
        <div class="col-10" style="margin-top:-9px ;">
            <h4>Listado de Novedades</h4>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fas fa-plus"></i>Agregar Novedad</a>

        </div>
    </div>
    {{!-- Fin fila 2 --}}
    {{!-- Fila 3 --}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-1" scope=" col">#</th>
                <th class="col-7" scope=" col">Título</th>
                <th class="col-2" scope=" col">Imagen</th>
                <th class="col-2" scope=" col">Acciones</th>

            </tr>
        </thead>
        <tbody>

            {{#each novedades}}

            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{{imagen}}}</td>


                <td class="text-right">
                    <button type="button" class="btn btn-warning">
                        <a href="/admin/novedades/modificar/{{id}}" class "btn btn-secondary"> <i class="fas fa-pencil-alt"></i> </a> </button>
                    <button type="button" class="btn btn-warning">
                        <a href="/admin/novedades/eliminar/{{id}}" class "btn btn-secondary"> <i class="fas fa-trash"></i> </a> </button>
                </td>

            </tr>

            {{/each}}

            {{!-- <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td></td>

            </tr>
            <tr>
                <th scope="row">3</th>
                <td colspan="2">Larry the Bird</td>

            </tr> --}}



        </tbody>
    </table>
</div>